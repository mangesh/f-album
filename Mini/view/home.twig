{% extends "_home_base.twig" %}
{% block content %}
        
    <div id="grid" class="container album-container">
        <div id="mode-group" class="btn-group btn-group-sm" data-toggle="buttons">
            <label class="btn btn-default disabled">
                <input type="radio" id="option1"> Mode:
            </label>
            <label class="btn btn-info active">
                <input type="radio" name="mode" value="view" id="option2"> View
            </label>
            <label class="btn btn-info">
                <input type="radio" name="mode" value="download" id="option3"> Download
            </label>
            <label class="btn btn-info">
                <input type="radio" name="mode" value="upload" id="option4"> Upload to G+
            </label>
        </div>
        <div class="clear"></div>
        <div id="download-mode-group" class="btn-group btn-group-xs hide" role="group">
            <button type="button" class="btn btn-info selected-albums " disabled="disabled">Selected Albums</button>
            <button type="button" class="btn btn-info all-albums">All Albums</button>
        </div>
        <div class="clear"></div>
        <p class="bg-primary link-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <strong>Download link:</strong> <a class='btn btn-primary btn-xs link' href="#">Download</a>
        </p>

        <p class="bg-primary upload-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <strong>Done:</strong> Facebook album has been uploaded on your picasa account.
        </p>
        
        <ul id="albums" class="">
            {% for album in albums %}
            <li id="{{album.id}}" class="album load-album">
                <div class="">
                    <span class="d-hide">{{album.name}}</span>
                    <span></span>
                    <img class="img-circle_" alt="{{album.name}}" title="{{album.name}}" src="{{album.picture.url}}">
                    
                    <div class="download-btn">
                        <p>
                            <button type="button" class="btn btn-primary btn-xs download">Download</button>
                            
                        </p>
                    </div>
                    
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
    
    <div class="modal fade bs-example-modal-lg modal-vcenter_ modal-fullscreen force-fullscreen" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="openModal">
        <div class="modal-dialog modal-lg">
            
            <div class="modal-content">
                <div class="modal-body">
                    <!-- <div class="inner-circles-loader hide">
                        Loading…
                    </div> -->
                    <div id="carousel-example-generic" class="carousel slide carousel-fit">

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner listrap" role="listbox">
                            
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
