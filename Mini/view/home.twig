{% extends "_home_base.twig" %}
{% block content %}
        
    <div id="grid" class="container album-container">
        <div id="mode-group" class="btn-group btn-group-sm" data-toggle="buttons">
            <label class="btn btn-default disabled">
                <input type="radio" id="option1"> Mode:
            </label>
            <label class="btn btn-info active">
                <input type="radio" name="mode" value="view" id="option2"> View
            </label>
            <label class="btn btn-info">
                <input type="radio" name="mode" value="download" id="option3"> Download
            </label>
            <label class="btn btn-info">
                <input type="radio" name="mode" value="upload" id="option4"> Upload to G+
            </label>
        </div>
        <ul id="albums" class="">
            {% for album in albums %}
            <li id="{{album.id}}" class="album load-album">
                <div class="">
                    <span></span>
                    <img class="img-circle_" alt="Album Cover" src="{{album.picture.url}}">
                    <strong class="d-hide">{{album.name}}</strong>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
